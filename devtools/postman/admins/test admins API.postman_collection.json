	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"var test_base = pm.collectionVariables.get(\"baseUrl\");",
					"",
					"if (!test_base) {",
					"    pm.collectionVariables.set(\"baseUrl\", \"http://localhost:8080/api/\");",
					"}",
					""
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					"var status = pm.response.code;",
					"var baseURL = pm.collectionVariables.get(\"baseUrl\");",
					"",
					"if (status == 401) {",
					"    pm.sendRequest ({",
					"        url: baseURL +\"auth/login\",",
					"        method: 'POST',",
					"        header: {",
					"            'Accept': 'application/json',",
					"            'Content-Type': 'application/json'",
					"            },",
					"        body: {",
					"            mode: 'raw',",
					"            raw: JSON.stringify({ ",
					"                email: \"admin@admin.pl\", ",
					"                password: \"admin\" ",
					"                })",
					"        }",
					"    } , function(err, res) {",
					"            if (!err) {",
					"                var jsonData = res.json();",
					"                console.log(jsonData);",
					"                pm.collectionVariables.set(\"accessToken\", jsonData[\"token\"]);",
					"            } else {",
					"                console.log(err);",
					"            }",
					"    });",
					"}"
				]
			}
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": ""
		},
		{
			"key": "accessToken",
			"value": ""
		}
	]
