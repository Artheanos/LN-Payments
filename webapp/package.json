{
  "name": "webapp",
  "description": "Front end application",
  "version": "0.0.1",
  "private": true,
  "author": "",
  "repository": {
    "url": "https://github.com/Artheaons/LN-Payments/webapp"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "test:unit": "jest",
    "test:e2e": "cypress run",
    "lint": "eslint src --max-warnings=0",
    "cypress": "cypress open",
    "setup:backend": " mkdir -p ~/.lnpayments && yarn setup:docker:regtest && yarn setup:btc && mvn spring-boot:run -f ../webservice/pom.xml -Dspring-boot.run.arguments=\"--lnp.wallet.network=regtest\"",
    "setup:docker:regtest": "docker-compose -f ../devtools/docker/docker-compose.yaml -f ../devtools/docker/docker-compose-regtest.yaml up -d && yarn setup:lnd",
    "setup:lnd": "docker cp lnd:/root/.lnd/tls.cert ~/.lnpayments && docker cp lnd:/root/.lnd/admin.macaroon ~/.lnpayments",
    "setup:btc": "docker exec btc bitcoin-cli -regtest -rpcpassword=test -rpcuser=test createwallet test && docker exec btc bitcoin-cli -regtest -rpcpassword=test -rpcuser=test getnewaddress && docker exec btc bitcoin-cli -regtest -rpcpassword=test -rpcuser=test -generate 50"
  },
  "dependencies": {
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@mui/icons-material": "^5.5.1",
    "@mui/material": "^5.4.0",
    "@stomp/stompjs": "^6.1.2",
    "bitcoin-address-soft-regex-validation": "^1.1.3",
    "cypress": "^9.5.4",
    "i18next": "^21.6.6",
    "msw": "^0.36.8",
    "qrcode.react": "^2.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.15.3",
    "react-router-dom": "^6.2.1",
    "recharts": "^2.1.12",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.8",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@babel/runtime": "^7.17.2",
    "@mui/lab": "^5.0.0-alpha.69",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^14.1.1",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.9",
    "@types/qrcode.react": "^1.0.2",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/sockjs-client": "^1.5.1",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "@vitejs/plugin-react": "^1.1.4",
    "autoprefixer": "^10.4.2",
    "axios": "^0.26.0",
    "babel-jest": "^27.4.6",
    "cypress-cucumber-preprocessor": "^4.3.1",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-tailwindcss": "^3.3.0",
    "formik": "^2.2.9",
    "jest": "^27.4.7",
    "jest-html-reporter": "^3.4.2",
    "postcss": "^8.4.5",
    "prettier": "2.5.1",
    "tailwindcss": "^3.0.15",
    "typescript": "^4.5.4",
    "vite": "^2.7.12",
    "vite-tsconfig-paths": "^3.3.17"
  },
